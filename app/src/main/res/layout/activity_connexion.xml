<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/lunchbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activitiy.ConnexionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bowl_logo"
            android:layout_marginTop="50dp"
            android:scaleY="1.4"
            android:scaleX="1.6"
            android:layout_gravity="center" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Go4Lunch"
        android:textSize="70sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12.5sp"
            android:text="Find a nice restaurant and invite your co-workers for lunch!"
            android:textColor="#ffffff"
            android:textStyle="italic">

        </TextView>
        <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="60dp">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/fb"
                android:layout_width="292dp"
                android:drawableStart="@drawable/fb_icon"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background ="@drawable/rounded_button_fb"
                android:clickable="true"
                android:fontFamily="@font/roboto"
                android:paddingLeft="8dp"
                android:onClick="onClick"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:text="     Sign in with Facebook"
                android:textColor="#ffffff"
                android:focusable="true">

            </Button>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="0dp">



        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/btn_sign_in"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:text="@string/google_sign_in"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

        </com.shobhitpuri.custombuttons.GoogleSignInButton>

            <Button
                android:id="@+id/google_button"
                android:layout_width="292dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:drawableStart="@drawable/icon_google"
                android:paddingLeft="8dp"
                android:text="Sign in with Google"
                android:fontFamily="@font/roboto"
                android:onClick="onClick"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:clickable="true"
                android:background="@drawable/rounded_button_google"
                android:layout_marginBottom="10dp"
                android:focusable="true">

            </Button>

        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>